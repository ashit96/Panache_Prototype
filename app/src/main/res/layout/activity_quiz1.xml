<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.win8.panache_prototype.quiz1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="  How open are you to trying more daring\n  fashion styles?"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:background="@android:color/darker_gray"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Not really into that"
        android:layout_marginBottom="30dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/button3"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:background="@android:color/darker_gray"
        android:layout_height="wrap_content"
        android:text="A bit open to it"
        android:layout_marginBottom="30dp"
        android:id="@+id/button2"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:background="@android:color/darker_gray"
        android:layout_height="wrap_content"
        android:text="Open to it"
        android:id="@+id/button4"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:text="Very open to it"
        android:id="@+id/button5"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:text="Back"
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@android:color/holo_red_dark"
        android:text="Next Step"
        android:id="@+id/button7"
        android:layout_alignTop="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:onClick="nextstep" />


</RelativeLayout>
